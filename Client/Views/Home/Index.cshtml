<div class="text-center my-3">
        <h3 class="display-4">To Do List</h3>
</div>

@if (Model.Count() < 1) {
    <div>
        <p class="text-center display-6 text-danger">No exist To Do list!!</p>
    </div>
} else {
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 gx-2 gx-sm-2 gx-md-2 gx-lg-3">
    @foreach (var item in Model) {
        <div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-3">
            <div class="border rounded px-4 py-2">
                <div class="row form-group mb-2">
                    <div class="col-8">
                        @Html.DisplayNameFor(model => model.Title) : @item.Title
                    </div>
                    <div class="col-4">
                        @Html.DisplayNameFor(model => model.Done) : <span> &#10006; </span>
                    </div>
                </div>
                <div class="overflow-hidden" style="height: 70px;">
                    @Html.DisplayNameFor(model => model.Description) : @item.Description
                </div>
                <div class="row form-group mt-1">
                    <div>
                        @Html.DisplayNameFor(model => model.CreatedAt) : @item.CreatedAt
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
}

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark opacity-75 text-light justify-content-center"><h5 class="modal-title"></h5></div>
            <div class="modal-body justify-content-center" id="modalContent"></div>
        </div>
    </div>
</div>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(function () {
           
        });
    </script>
}