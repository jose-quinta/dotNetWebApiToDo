@model Client.Models.ToDoDto

<form asp-action="Create" asp-controller="ToDo" method="post">
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-2">
            <div class="col-12">
                <label asp-for="Title" class="col-form-label"></label>
            </div>
            <div class="col-12">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="row mb-2">
            <div class="col-12">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-12">
                @* <input asp-for="Description" class="form-control" /> *@
                <textarea asp-for="Description" name="Description" class="form-control" rows="6"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="offset-sm-2 offset-md-3 col-12 col-sm-10 col-md-8 col-lg-6">
                <div class="row form-group">
                    <div class="col-4 col-sm-5 col-md-6 col-lg-6">
                        <input type="submit" name="Create" value="Create" class="btn btn-info form-control" />
                    </div>
                    <div class="col-4 col-sm-5 col-md-6 col-lg-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
